<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343434"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <include android:id="@id/app_bar"
        layout="@layout/app_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/removeTxt"
        android:text="Remove Classes"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginStart="94dp"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/classesTxt"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/removeTxt"
        android:id="@+id/removeList"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/assessTxt"
        android:text="Grades"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:layout_below="@+id/removeTxt"
        android:layout_toEndOf="@+id/removeTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classesTxt"
        android:text="Classes"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/removeTxt"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subjectsTxt"
        android:text="Subjects"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:layout_below="@+id/removeTxt"
        android:layout_centerHorizontal="true" />


</RelativeLayout>